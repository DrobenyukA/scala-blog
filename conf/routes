# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET     /                                   controllers.HomeController.renderHomePage

GET     /blog                               controllers.PostController.renderBlog
GET     /blog/post/create                   controllers.PostController.renderPostFrom(id ?= "")
GET     /blog/post/:id/edit                 controllers.PostController.renderPostFrom(id)
GET     /blog/post/:id                      controllers.PostController.renderPost(id)
POST    /blog/post                          controllers.PostController.createPost
PUT     /blog/post/:id                      controllers.PostController.updatePost(id)
DELETE  /blog/post/:id                      controllers.PostController.deletePost(id)

# AUTH
GET      /login                             controllers.AuthController.renderLoginForm
POST     /login                             controllers.AuthController.login
POST     /logout                            controllers.AuthController.logout
GET      /register                          controllers.AuthController.renderRegistrationForm
POST     /register                          controllers.AuthController.register


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
